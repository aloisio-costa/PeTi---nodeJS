<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Pet Sitter Profile</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/petSitters" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div  class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="petSitter[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="petSitter[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Walk Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="prie-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="petSitter[price]" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" rows="4" cols="50" name="petSitter[description]" required>
                    </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-file custom-file">
                        <div class="mb-3">
                            <label for="image" class="form-label custom-file-label">Choose Image(s)</label>
                            <input class="form-control" type="file" id="image" name="image" multiple
                             onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                          </div>
                        <img class="img-fluid my-3" id="preview" />
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Create Profile</button>
                </div>
            </form>
            <a href="/petSitters">Back to Pet lovers</a>
        </div>
    </div>