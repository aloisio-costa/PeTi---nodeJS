<% layout('/layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Request</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/serviceRequests/<%=request._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div  class="mb-3">
                    <label class="form-label" for="petname">Pet Name</label>
                    <input class="form-control" type="text" id="petname" name="serviceRequest[petname]" value="<%=request.petname%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div  class="mb-3">
                    <label class="form-label" for="pettype">Pet Type</label>
                    <input class="form-control" type="text" id="pettype" name="serviceRequest[pettype]" value="<%=request.pettype%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <div  class="mb-3">
                    <label class="form-label" for="service">Service</label>
                    <select class="form-control" name="serviceRequest[service]" id="service" required>
                        <% for(let service of services) {%>
                            <option value="<%=service%>" <%=request.service===service ? 'selected' : '' %> ><%=service%></option>
                            <% } %>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="serviceRequest[location]"
                        value="<%= request.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div  class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="textarea" id="description" name="serviceRequest[description]" required><%=request.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- Image -->
                <div class="mb-3">
                    <div class="form-file custom-file">
                        <div class="mb-3">
                            <label for="image" class="form-label custom-file-label">Add Image(s)</label>
                            <input class="form-control" type="file" id="image" name="image" multiple
                             onchange="document.getElementById('preview').src = window.URL.createObjectURL(this.files[0])">
                          </div>
                        <img class="img-fluid my-3" id="preview" />
                    </div>
                </div>
                <div class="mb-3">
                    <% request.images.forEach(function(img, i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt=" ">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Request</button>
                </div>
            </form>
        <a href="/serviceRequests/<%=request._id%>">Back to Request</a>
    </div>
</div>